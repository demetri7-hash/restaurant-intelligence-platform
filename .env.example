# Database Environment Variables
# Copy this file to .env and fill in your actual values

# KEYOB PostgreSQL Database Connection
DATABASE_URL=postgresql://username:password@host:port/database_name
KEYOB_API_KEY=your_keyob_api_key_here
KEYOB_PROJECT_ID=your_project_id_here

# Database Configuration
DB_HOST=your_keyob_host
DB_PORT=5432
DB_NAME=restaurant_intelligence_platform
DB_USER=your_username
DB_PASSWORD=your_password
DB_SSL=true

# JWT Authentication
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_EXPIRES_IN=7d

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
AUTH0_DOMAIN=your_auth0_domain
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret

# POS API Credentials
SQUARE_APPLICATION_ID=your_square_app_id
SQUARE_ACCESS_TOKEN=your_square_access_token
SQUARE_ENVIRONMENT=sandbox  # change to production when ready
SQUARE_WEBHOOK_SIGNATURE_KEY=your_webhook_signature_key

TOAST_CLIENT_ID=your_toast_client_id
TOAST_CLIENT_SECRET=your_toast_client_secret
TOAST_ENVIRONMENT=sandbox

# External APIs
WEATHER_API_KEY=your_weather_api_key
EVENTS_API_KEY=your_events_api_key

# Deployment
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# MongoDB for Analytics (if using separate analytics DB)
MONGODB_URI=mongodb://localhost:27017/restaurant_analytics